<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/default_margin">


        <ImageView
            android:id="@+id/image"
            android:layout_width="@dimen/image_length"
            android:layout_height="@dimen/image_length"
            android:src="@drawable/profile"
             />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/image">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/default_margin"
                android:text="Upload contacts"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/title"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/default_margin"
                android:text="Upload contacts"
                android:textColor="@color/normal_text_color"
                android:textSize="@dimen/mini_text_size" />

        </RelativeLayout>

        <ImageView
            android:id="@+id/extra_image"
            android:layout_width="@dimen/mini_image_length"
            android:layout_height="@dimen/mini_image_length"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_pan_tool_black_24dp"
            android:tint="@color/gray" />


    </RelativeLayout>
</layout>